// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
}

model Categories {
  id   Int     @id @default(autoincrement())
  name String  @unique
  tests Tests[]
}

model Teachers {
  id                Int                   @id @default(autoincrement())
  name              String                @unique
  teacherDiscipline TeachersDisciplines[]
}

model Terms {
  id         Int           @id @default(autoincrement())
  number     Int           @unique
  discipline Disciplines[]
}

model Disciplines {
  id                Int                   @id @default(autoincrement())
  name              String                @unique
  termId            Int
  terms             Terms                 @relation(fields: [termId], references: [id])
  teacherDiscipline TeachersDisciplines[]
}

model TeachersDisciplines {
  id           Int         @id @default(autoincrement())
  teacherId    Int
  disciplineId Int
  teachers     Teachers    @relation(fields: [teacherId], references: [id])
  disciplines  Disciplines @relation(fields: [disciplineId], references: [id])
  tests        Tests[]
}

model Tests {
  id                  Int                 @id @default(autoincrement())
  name                String
  pdfUrl              String
  categoryId          Int
  teacherDisciplineId Int
  teacherDisciplines  TeachersDisciplines @relation(fields: [teacherDisciplineId], references: [id])
  categories          Categories          @relation(fields: [categoryId], references: [id])
}
